extends ../layouts/main-2

block variables
  - let mainClass = `main-page main-page--padding`
  - let wrapperClass = `wrapper--nobackground`

block content
  section.main-page__notes.notes
    h1.notes__title Мои записи
    ul.notes__list
      each article in articles
        li.notes__list-item
          time.notes__item-time(datetime='2019-03-21T20:33') #{article.createdDate}
          a.notes__item-text(href='#') #{article.title}
          button.notes__button.button.button--close-item(type='button')
            span.visually-hidden Закрыть строку списка
