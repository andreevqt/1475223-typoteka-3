extends ../layouts/main

block variables
  - let mainClass = `main-page main-page--padding`
  - let wrapperClass = `wrapper--nobackground`

block content
  section.main-page__notes.notes
    h1.notes__title Мои записи
    ul.notes__list
      - for (article of articles)
          li.notes__list-item
            time.notes__item-time(datetime='2019-03-21T20:33') #{article.createdAt}
            a.notes__item-text(href=`/articles/${article.id}`) #{article.title}
            button.notes__button.button.button--close-item(type='button', data-delete=`/my/delete/${article.id}`)
              span.visually-hidden Закрыть строку списка
    div !{articles.links()}
